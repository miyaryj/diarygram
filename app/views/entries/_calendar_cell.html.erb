<div class="dropdown">
  <% entries.each do |entry| %>
    <%= link_to('#', class: 'dropdown-toggle', data: {toggle:'dropdown'}) do %>
      <%= image_tag(entry.thumbnail_url, class: 'img-responsive') %>
      <p class="calendar-date"><%= date.day %></p>
    <% end %>
    <ul class="dropdown-menu">
      <li class="dropdown-header"><%= entry.text %></li>
      <li><%= link_to 'View', entry.media_url  %></li>
      <li><%= link_to 'Edit', edit_entry_path(entry.id) %></li>
      <li><%= link_to 'Delete', entry_path(entry.id), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  <% end %>
</div>
