<h1>Instagram#index</h1>
<h3><%= @instagram_username %></h3>

<ul class="list-group">
  <% @instagram_medias.each do |media| %>
    <li class="list-group-item">
      <%= link_to(instagram_media_path(media.id)) do %>
        <%= image_tag(media.images.thumbnail.url) %><br/>
        <%= media.caption.text if media.caption %><br/>
        <%= Time.at(media.created_time.to_i).to_s %>
      <% end %>
    </li>
  <% end %>
</ul>
