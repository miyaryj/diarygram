<div class="row">
  <div class="col-md-6 col-sm-12">
    <%= render @user %>

    <div class="user-stats">
      <%= link_to following_user_path(@user), class: 'link-accent' do %>
        <strong id="following" class="user-stat">
          <%= @user.followed_users.count %>
        </strong>
        following
      <% end %>
      <%= link_to followers_user_path(@user), class: 'link-accent' do %>
        <strong id="followers" class="user-stat">
          <%= @user.followers.count %>
        </strong>
        followers
      <% end %>
    </div>
  </div>

  <div class="col-md-6 col-sm-12">
    <%= render partial: 'users/follow_form' %>
  </div>

  <div class="col-md-12">
    <%= render partial: 'entries/calendar', locals: {entries: entries_calendar(@entries)} %>
  </div>
</div>
